generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Carrinho {
  id                 Int       @id @default(autoincrement())
  consumo_energetico Float
  motor              String
  velocidade_media   Float
  aceleracao         Float
  Trajeto            Trajeto[]
}

model Trajeto {
  id                 Int        @id @default(autoincrement())
  distancia          Float?
  inicio             DateTime
  fim                DateTime?
  tempo              Float?
  velocidade_media   Float? // Velocidade média do trajeto
  aceleracao         Float? // Aceleração média do trajeto
  consumo_energetico Float? // Consumo total do trajeto
  carrinho_id        Int
  carrinho           Carrinho   @relation(fields: [carrinho_id], references: [id])
  Registro           Registro[]
}

model Registro {
  id         Int     @id @default(autoincrement())
  id_trajeto Int
  trajeto    Trajeto @relation(fields: [id_trajeto], references: [id])

  velocidade_instantanea Float // Velocidade instantânea
  aceleracao_instantanea Float // Aceleração instantânea
  consumo_energetico     Float // Consumo instantâneo

  created_at DateTime @default(now())
}
